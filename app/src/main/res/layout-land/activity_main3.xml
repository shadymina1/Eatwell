<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageViewY3"
        android:layout_width="725dp"
        android:layout_height="604dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textViewY3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Eatwell"
        android:textAllCaps="true"
        android:textColor="#4C5500"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewY3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toSaladsY3"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:onClick="toPay"
        android:text="Order and pay"
        app:layout_constraintStart_toEndOf="@+id/textViewY3"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="315dp"
        android:layout_height="416dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewY3"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="236dp"
                app:srcCompat="@drawable/salad1" />

            <TextView
                android:id="@+id/lavaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lava Salad"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="133dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:onClick="lavaMin"
                        app:srcCompat="@drawable/minus" />

                    <TextView
                        android:id="@+id/lavaQ"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="lavaAdd"
                        app:srcCompat="@drawable/plus" />

                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/salad2" />

            <TextView
                android:id="@+id/greenTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Green Salad"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="135dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="greenMin"
                        app:srcCompat="@drawable/minus" />

                    <TextView
                        android:id="@+id/greenQ"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="greenAdd"
                        app:srcCompat="@drawable/plus" />
                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/salad3" />

            <TextView
                android:id="@+id/pumTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pum Salad"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="135dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="pumMin"
                        app:srcCompat="@drawable/minus" />

                    <TextView
                        android:id="@+id/pumQ"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:onClick="pumAdd"
                        app:srcCompat="@drawable/plus" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/receipt"
        android:layout_width="237dp"
        android:layout_height="604dp"
        android:background="#9E000000"
        android:gravity="center_horizontal"
        android:text="Your Order:"
        android:textColor="#E1DEDE"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/imageViewY3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="153dp"
        android:layout_height="64dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="28dp"
        android:onClick="toPay"
        android:text="Order"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>